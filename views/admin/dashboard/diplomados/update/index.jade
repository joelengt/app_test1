<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	title Plataforma
body
	header
		h2 Logo Ascent
		//-div
			img(src="#{user.photo.path}", width="50")
			//- p #{user.email}
			p @ #{user.nickname}
			div
				a(href="/plataforma/perfil/#{user._id}") Perfil
			div
				a(href="/logout") Salir
			div
				p Tu eres User #{user.access}
	section
		h2 AÃ±adir un nuevo Diplomado

		form(action="/plataforma/admin/diplomados/update/#{diplomado._id}?_method=put", method="post", enctype="multipart/form-data")
			div
				label Titulo
				input(type="text", name="title", value="#{diplomado.title}")
			div
				label Icon
				img(src="#{diplomado.icon.path}", width="50", height="50")
				input(type="file", name="diplomado_icon")
			div
				label Cover
				img(src="#{diplomado.cover.path}", width="150", height="150")
				input(type="file", name="diplomado_cover")
			div
				label Slogan
				input(type="text", name="slogan", value="#{diplomado.slogan}")
			div
				label Tags
				input(type="text", name="tags", value="#{diplomado.tags}")
			div
				label Description
				textarea(name="description", cols="30", rows="10") #{diplomado.description}
			div
				p Materiales del diplomado
				div
					label Audiolibro
					input(type="file", name="diplomado_audioLibros", multiple)
					div
						each audio in audios
							div
								a(href="#{audio.path}") #{audio.originalname} | Play 
								audio(src="#{audio.path}", controls)
							br
				div
					label Texto
					input(type="file", name="diplomado_textos", multiple)
					div
						each texto in textos
							div
								a(href="#{texto.path}") #{texto.originalname}
							br  
				div
					label Simulador
					input(type="file", name="diplomado_simuladores")

			button Guardar
			
