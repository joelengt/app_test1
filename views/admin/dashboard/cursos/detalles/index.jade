<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	title Plataforma
body
	header
		h2 Logo Ascent
		div
			img(src="#{user.photo.path}", width="50")
			//- p #{user.email}
			p @ #{user.nickname}	
			div
				a(href="/plataforma/perfil/#{user._id}") Perfil
				
			div
				a(href="/plataforma/admin/") Go Admin
			div
				a(href="/logout") Salir
	nav
		ul
			li
				a(href="/plataforma/perfil/#{user._id}") Perfil
			li
				a(href="/plataforma/") Cursos 
				a(href="/plataforma/diplomados") |  Diplomados
			li
				a(href="/plataforma/comunidad") Comunidad

	section
		p Vista del Curso
		article
			a(href="/plataforma/cursos/#{curso._id}")
				img(src="#{curso.cover.path}", width="260")
			div
				img(src="#{curso.icon.path}", width="60")
			h3 
				a(href="/plataforma/cursos/#{curso._id}") #{curso.title}
			div
				p Slogan: #{curso.slogan}
				p Promedio Rate: #{curso.promedioRate}
				p Tags: #{curso.tags}
				p Descripción: #{curso.description}
				p Color: #{curso.colour}
				p Id base de datos: #{curso._id}
				p Fecha de creación: #{curso.createdAt}
				p Preguntas Totales: #{simulador.info.preguntas}
				p Lecciones Totales: #{simulador.info.lecciones}


			div
				div
					div
						form(action="/plataforma/admin/cursos/delete/#{curso._id}", method="post")
							button Eliminar
					div
						form(action="/plataforma/admin/cursos/update/#{curso._id}", method="post")
							button Actualizar

				divs
					a(href="/plataforma/cursos/#{curso._id}") Ir al Curso
