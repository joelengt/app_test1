									div
										div
											label Preguntas #{simulador.basico.n_questions}
										div
											input(type="text", name="curso_simulador_basico_n_questions", value="#{simulador.basico.n_questions}")

									div
										button Guardar
							
							article(style="border-top: 1px solid gray; padding-top: 1rem;")
								h3 #{simulador.intermedio.title}
								div
									div
										img(src="#{simulador.intermedio.icon}", width="100")
									div
										textarea(name="curso_simulador_intermedio_description") #{simulador.intermedio.description}

									div
										p Max. Preguntas Disponibles #{simulador.intermedio.max_questions}
