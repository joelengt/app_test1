<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	title Plataforma
body
	header
		h2 Logo Ascent
		div
			img(src="#{user.photo.path}", width="50")
			//- p #{user.email}
			p @ #{user.nickname}
			div
				a(href="/plataforma/perfil/#{user._id}") Perfil
			div
				a(href="/logout") Salir
			div
				p Tu eres User #{user.access}
	section
		form(action="/plataforma/admin/cursos/new_course", method="post") 
			button Añadir Curso
	section
		div
			p Cursos Disponibles
			each curso in cursos
				article(style="border-top: 1px solid gray; padding-top: 1rem; background: #{curso.colour}")
					img(src="#{curso.icon.path}", width="60")
					h3 #{curso.title}
					div
						p Slogan: #{curso.slogan}
						p Promedio Rate: #{curso.promedioRate}
						p Tags: #{curso.tags}
						p Descripción: #{curso.description}

					div
						div
							a(href="/plataforma/admin/cursos/#{curso._id}") Ver detalles
					br
