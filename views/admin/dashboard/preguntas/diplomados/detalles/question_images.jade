<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	meta(name="viewport", content="width=device-width, minimum-scale=1, maximum-scale=1")
	title Ascent: Admin Dashboard
body
	header
		h2 Logo Ascent
		p Admin Dashboard
	div
		img(src="#{user.photo.path}", width="50")
		//- p #{user.email}
		p @ #{user.nickname}	
		div
			a(href="/plataforma/perfil/#{user._id}") Perfil
		div
			a(href="/logout") Salir
		div
			p Tu eres User #{user.access}
	div
		article
			h2 #{pregunta.question}
			p  Tipo de categoria: #{pregunta.type_categority}
			p  Tipo de pregunta: #{pregunta.type_question}
			p  Dificutad: #{pregunta.difficulty}
			p  Titulo de tema: #{pregunta.topic_title}
			p  Respuesta: 
				img(src="#{pregunta.answer.string}", width="300")
			p  Alternativas: 
			ul 	
				each  other_answer in other_answers
					div
						p Alternativa #{other_answer.orden}
						img(src="#{other_answer.answer}", width="300")

		form(action="/plataforma/admin/preguntas/diplomados/update/#{pregunta._id}", method="post")
			button Update
		form(action="/plataforma/admin/preguntas/diplomados/delete/#{pregunta._id}", method="post")
			button Delete