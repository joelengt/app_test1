<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	title Plataforma
body
	header
		h2 Logo Ascent
		div
			img(src="#{user.photo.path}", width="50")
			//- p #{user.email}
			p @ #{user.nickname}	
			div
				a(href="/plataforma/perfil/#{user._id}") Perfil
				
			div
				a(href="/plataforma/admin/") Go Admin
			div
				a(href="/logout") Salir
	nav
		ul
			li
				a(href="/plataforma/perfil/#{user._id}") Perfil
			li
				a(href="/plataforma/") Cursos 
				a(href="/plataforma/diplomados") |  Diplomados
			li
				a(href="/plataforma/comunidad") Comunidad

	section
		p Vista de Cursos Default:
		each curso in cursos
			article(style="border-top: 1px solid gray; padding-top: 1rem; background: #{curso.colour}")
				a(href="/plataforma/cursos/#{curso._id}")
					img(src="#{curso.icon.path}", width="60")
				h3 
					a(href="/plataforma/cursos/#{curso._id}", name="#{curso._id}", class="btn_channel") #{curso.title}
				div
					p Slogan: #{curso.slogan}
					p Promedio Rate: #{curso.promedioRate}
					p Tags: #{curso.tags}
					p Descripci√≥n: #{curso.description}

