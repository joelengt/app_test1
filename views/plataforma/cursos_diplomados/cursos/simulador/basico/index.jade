<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	title Plataforma
body
	header
		h2 Logo Ascent
		div
			img(src="#{user.photo.path}", width="50")
			//- p #{user.email}
			p @ #{user.nickname}	
			div
				a(href="/plataforma/perfil/#{user._id}") Perfil
				
			div
				a(href="/plataforma/admin/") Go Admin
			div
				a(href="/logout") Salir
	nav
		ul
			li
				a(href="/plataforma/perfil/#{user._id}") Perfil
			li
				a(href="/plataforma/") Cursos 
				a(href="/plataforma/diplomados") |  Diplomados
			li
				a(href="/plataforma/comunidad") Comunidad

	section
		p Vista del Curso: #{curso.title}
		h2 Simulador Nivel: #{curso.materiales.simulador.basico.title}

		div
			img(src="#{curso.materiales.simulador.basico.icon}", width="100")
		
		each simulador in nivel
			h3 Leccion: #{simulador[0].title}
			p #{simulador[0].description}
			a(href="/plataforma/cursos/#{curso._id}/simulador/basico/#{simulador[0].title}") Iniciar 
			


