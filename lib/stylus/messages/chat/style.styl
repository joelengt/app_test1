.HeaderOthers
	background-color  white
	box-shadow  0px 1px 5px #b3b3b3
	height 70px
	width 100%
	position fixed
	top 0
	z-index 75

.ChatUserItem
	&__container
		Box(0, white, transparent, 0, 2em)
		width 100%
		margin 0 auto
		height 100vh
		position relative
		&--messages
			height 100vh
			padding 80px 0
			.ChatsContainer
				scroll()
				overflow overlay
				height 100%
				&__publishContainer
					&--itemRight
						display flex
						flex-wrap wrap
						justify-content flex-end
						.ItemRight
							margin-bottom 10px
							position relative
							max-width 500px
							padding-right 60px
							&__avatar
								position absolute
								right 10px
								bottom 0
								width 40px
								height 40px
								border-radius 50%
								background-size cover
								background-position center
							&__contentMessage
								&--message
									background-color verde_A
									padding 10px
									border-radius 15px
									.ContentMessage
										color blanco_A
										margin-bottom 5px
									.DateMessage
										font-size 12px
										color blanco_A
										font-weight lighter
										text-align right
								&--multimedia
									.FigureMultimedia
										border-radius 15px
										border 2px solid verde_A
										background-color verde_A
										margin-bottom 5px
										&__image
											border-radius 15px
											max-height 200px
					&--itemLeft
						display flex
						flex-wrap wrap
						justify-content flex-start
						.ItemLeft
							margin-bottom 10px
							position relative
							max-width 500px
							padding-left 60px
							&__avatar
								position absolute
								left 10px
								bottom 0
								width 40px
								height 40px
								border-radius 50%
								background-size cover
								background-position center
							&__contentMessage
								&--message
									background-color blanco_C
									padding 10px
									border-radius 15px
									.ContentMessage
										color gris_C
										margin-bottom 5px
									.DateMessage
										font-size 12px
										color gris_C
										font-weight lighter
										text-align right
								&--multimedia
									.FigureMultimedia
										border-radius 15px
										border 2px solid blanco_C
										background-color blanco_C
										margin-bottom 5px
										&__image
											border-radius 15px
											max-height 200px
						// 	border 1px solid #a9a9a9
						// 	border-radius 20px
						// 	padding 10px
						// 	background-color #e8e8e8
						// 	margin-bottom 10px
		&--sendMessage
			position absolute
			bottom 0
			width 100%
			.SendMessages
				padding 5px
				background-color gris_A
				width 100%
				&__textareaText
					&--box
						padding 5px
						font-size 14px
						height 40px
						width 100%
						border 0
						outline 0
						resize none
						scroll()				
				&__inputActions
					display flex
					justify-content space-between
					&--multimedia
						.labelMultimedia
							cursor pointer
							color gris_D
							margin 0
						.inputMultimedia
							width 0.1px
							height 0.1px
							opacity 0
							overflow hidden
							position absolute
							z-index -1
					&--send
						color white
						border 0
						outline 0
						background-color verde_A
						border-radius 10px
						font-size 16px
						padding 2px
						width 100px
						
				&__previewImageMessage
					#published_publish_multimedia_chat_path
						width 40px
						border-radius 8px
						border 2px solid verde_A
					strong
						display none