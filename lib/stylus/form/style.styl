label(wallpaper)
	text-align center
	display block
	cursor pointer
	color #999
	position relative
	padding .5em
	font-size 1em
	border-radius 5px
	border 2px solid #eee
	transition all 0.3s ease
	.buttonRadio
		transition all 0.3s ease
		display block
		position absolute
		left 20px
		bottom 10px
		width 20px
		height 20px
		border 3px solid #eee
		margin-right 1em
		background-color white
		border-radius 50%
		padding 2px
		&__in
			height 10px
			width 10px
			border-radius 50%
			background-color white
	&:hover
		border 2px solid #1caff6
		color #1caff6
		.buttonRadio
			border 3px solid #1caff6
			
	&:before
		content ""
		display block
		width 150px
		height 150px
		padding .5em
		margin 0 auto .5em auto
		background-image url(wallpaper)
		background-size contain
		background-repeat no-repeat
		background-position center

