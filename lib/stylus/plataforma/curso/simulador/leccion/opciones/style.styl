.ModalReport
	position absolute
	z-index 85
	background-color rgba(177, 177, 177, 0.29)
	top 0
	bottom 0
	right 0
	left 0
	display flex
	justify-content center
	align-items center	
	&__box
		width 90%
		max-width 400px
		padding 1.5em
		border-radius 5px
		background-color white
		box-shadow 0px 0px 5px #929292
		&--title
			h3
				color #292929
		&--inputText
			padding 1em 0
		&--buttons
			display flex
			justify-content space-between
			.cancel, .send
				div
					width 100px
					padding .3em
					border-radius 5px
					text-align center
			.cancel
				div
					border 2px solid naranja_A
					color naranja_A
					transition .3s
					cursor pointer
					&:hover
						box-shadow 0 0 8px naranja_A
						/*border 2px solid naranja_A
