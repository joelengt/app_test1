.PlataformHeader
	box-shadow 0 1px 5px #929292
	background-color white
	position fixed
	font-family roboto
	width 100%
	z-index 85

.Active
	background-color verde_A !important
	color white !important
	border-bottom 3px solid verde_A !important
	

.PlataformSubHeader
	width 100%
	font-family roboto
	padding-top 70px
	&__box
		display flex
		justify-content center
		&--list
			display flex
			justify-content center
			list-style none
			margin 0
			width 100%
			flex-wrap wrap
			.links
				width 50%
				//display block
				&__tab
					font-family 'Roboto', sans-serif
					font-size 1rem
					text-align center
					padding .7em 1.5em
					cursor pointer
					color #A4AED2
					display block
					transition .3s
					text-decoration none
					border-bottom 3px solid white
					&:hover
						color #333

@media screen and (min-width 768px)
	.Active
		background-color transparent !important
		border-bottom 3px solid verde_A !important
		color verde_A !important

	.PlataformSubHeader
		&__box
			&--list
				display inherit
				width auto
				.links
					width 190px
					//display inline-block