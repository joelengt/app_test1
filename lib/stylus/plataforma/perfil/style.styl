.Perfil
	Container(70px)
	&__container
		min-height 450px
		Box(0, transparent, transparent, 0, 2em)
		width 100%
		max-width 500px
		margin 0 auto
	&__Box
		&--portrate
			.Portrate
				display flex
				align-items center
				justify-content center
				width 100%
				flex-direction column
				background-image linear-gradient(to bottom left, azul_C 49%, gris_A 51%)
				//background-color #e6e6e6
				height 250px
				&__avatar
					width 120px
					height 120px
					background-size cover
					border 4px solid white
					border-radius 3px
					background-position center
				&__info
					text-align center
					&--name
						color gris_D
					&--grade
						color gris_D
		&--navigate
			display none
		&--navMobile
			background-color white
			border-top 1px solid gris_B
			.list
				height 50px
				list-style none
				align-items center
				display flex
				flex-wrap wrap
				margin 0
				padding 0
				li
					width 25%
					text-align center
					a
						span
							font-size 1.3rem
							color gris_C
	&__informationContainer
		background-color body
		position relative
		padding 5px
		&--box
			background-color white
			padding 1em
			border 1px solid
			border-color #ebedf0
			.editInformation
				cursor pointer
				//display none
				position absolute
				top 20px
				right 20px
				box-shadow 0 0 8px white
				background-color white
				a
					text-decoration none
					color #8a8a8a
					span
						transition .2s
						font-size 25px
					&:hover
						span
							color #333
			.Title
				padding-bottom 10px
				width 90%
				h2
					font-weight bold
					text-transform uppercase
					font-size 1.5em
					color gris_D
			.Data, RedesSociales
				width 90%
				&__list
					display flex
					flex-wrap wrap
					&--left
						width 50%
						padding-left 2em
						border-top 1px solid gris_B
						p
							padding 1em 0
							color gris_D
					&--right
						width 50%
						border-top 1px solid gris_B
						p
							padding 1em 0
							color gris_D
							font-weight lighter
							white-space nowrap
							overflow hidden
							text-overflow ellipsis
			.RedesTitle
				margin-top 3em
				padding-bottom 10px
				width 90%
				h2
					font-weight bold
					text-transform uppercase
					font-size 1.5em
					color gris_D
			.RedesSociales
				width 90%
				&__list
					display flex
					flex-wrap wrap
					&--left
						width 50%
						padding-left 2em
						border-top 1px solid gris_B
						p
							text-overflow ellipsis
							padding 1em 0
							color gris_D
							white-space nowrap
							overflow hidden
					&--right
						width 50%
						border-top 1px solid gris_B
						p
							text-overflow ellipsis
							padding 1em 0
							color gris_D
							font-weight lighter
							white-space nowrap
							overflow hidden
				
@media screen and (min-width 767px)
	.Perfil
		&__container
			Box(30px, transparent, transparent, 0, 2em)
		&__Box
			width 29%
			position fixed
			max-width 220px
			&--portrate
				.Portrate
					margin-bottom 10px
					border 1px solid
					border-color gris_A
					background-image none
					background-color white
					border-radius 10px
					&__avatar
						width 100%
						border-radius 10px 10px 0 0
						height 200px
					&__info
						text-align left
						width 100%
						padding .5em
						border-top 1px solid gris_B
						&--name
							h2
								font-size 18px
						&--grade
							p
								font-size 15px
								font-weight lighter
			&--navMobile
				display none
			&--navigate
				display block
				background-color white
				border 1px solid
				border-color gris_A
				padding 5px
				border-radius 10px
				margin-bottom 10px
				.list
					list-style none
					margin 0
					li
						min-width 100px
						padding 5px
						a
							text-decoration none
							color gris_E
							font-weight lighter
							font-size 1rem
							span
								margin-right 10px
		&__informationContainer
			width 69%
			padding-bottom 2em
			padding 0 5px
			float right
			&--box
				.editInformation
					top 10px
					right 10px
					
