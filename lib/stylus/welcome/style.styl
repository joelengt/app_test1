.MainHeaderWelcome
	background-color white
	height 70px
	width 100%
	z-index 75
	position fixed
	box-shadow 0 1px 5px #929292
	
.Welcome
	padding-top 70px
	display flex
	height 100vh
	justify-content center
	align-items center
	background-color white
	&__content
		text-align center
		width 90%
		max-width 400px
		padding 2em 0
		border-radius 12px
		box-shadow 1px 1px 5px gris_C
		&--title
			color gris_D
			margin-bottom 10px
			font-size 25px
		&--avatar
			margin-bottom 1em
			.avatarUser
				border-radius 50%
				width 150px
				height 150px
				margin 0 auto
				background-size cover
				background-repeat no-repeat
				background-position center
			p
				padding-top 10px
				font-weight lighter
				color gris_D
		&--infoUser
			margin-bottom 2em
			color gris_D
			h1
				font-size 1.5em
			h2
				padding-top .5em
				font-size 1em
				font-weight lighter
		&--infoCategory
			color #34C0CA
			margin-bottom 2em
			span
				font-size 16px
				font-weight lighter
				color azul_A
			h3
				color azul_A
				font-size 1.2em
				font-weight bold
		&--button
			width 40%
			background-color verde_B
			display inline-block
			border-radius 4px
			padding 5px
			.button
				color white
				text-decoration none